<% content_for :title do %>
  Materials
<% end %>

<div class="page-header">
  <h1>Materials</h1>
  <%= link_to new_material_path, class: 'btn btn-primary' do %>
    <%= icon 'fas', 'plus' %>
    Novo Material
  <% end %>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Quantidademinima</th>
        <th>Quantidade</th>
        <th>Devolutivo</th>
        <th>Unidademedida</th>
        <th>Fornecedor</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @materials.each do |material| %>
        <tr>
          <td><%= material.nome %></td>
          <td><%= material.quantidadeMinima %></td>
          <td><%= material.quantidade %></td>
          <td><%= material.devolutivo %></td>
          <td><%= material.UnidadeMedida %></td>
          <td><%= material.Fornecedor %></td>
          <td>
            <%= link_to material, class: 'btn btn-info btn-sm' do %>
              <%= icon 'fas', 'eye', class: 'fa-fw' %>
            <% end %>
            <%= link_to edit_material_path(material), class: 'btn btn-success btn-sm' do %>
              <%= icon 'fas', 'edit', class: 'fa-fw' %>
            <% end %>
            <%= link_to material, method: :delete, data: { confirm: 'VocÃª tem certeza?' }, class: 'btn btn-danger btn-sm' do %>
              <%= icon 'fas', 'times', class: 'fa-fw' %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>