
<%= simple_form_for @material do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :nome %>
    <%= f.input :quantidadeMinima %>
    <%= f.input :quantidade %>
    <%= f.input :devolutivo %>
    <%= f.association :UnidadeMedida %>
    <%= f.association :Fornecedor %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, f.object.new_record? ? 'Criar Material' : 'Atualizar Material', class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>
