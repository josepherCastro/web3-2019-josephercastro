
<%= simple_form_for @unidade_medida do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :nome %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, f.object.new_record? ? 'Criar Unidade medida' : 'Atualizar Unidade medida', class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>
