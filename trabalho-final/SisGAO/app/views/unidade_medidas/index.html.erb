<% content_for :title do %>
  Unidade medidas
<% end %>

<div class="page-header">
  <h1>Unidade medidas</h1>
  <%= link_to new_unidade_medida_path, class: 'btn btn-primary' do %>
    <%= icon 'fas', 'plus' %>
    Novo Unidade medida
  <% end %>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Nome</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @unidade_medidas.each do |unidade_medida| %>
        <tr>
          <td><%= unidade_medida.nome %></td>
          <td>
            <%= link_to unidade_medida, class: 'btn btn-info btn-sm' do %>
              <%= icon 'fas', 'eye', class: 'fa-fw' %>
            <% end %>
            <%= link_to edit_unidade_medida_path(unidade_medida), class: 'btn btn-success btn-sm' do %>
              <%= icon 'fas', 'edit', class: 'fa-fw' %>
            <% end %>
            <%= link_to unidade_medida, method: :delete, data: { confirm: 'VocÃª tem certeza?' }, class: 'btn btn-danger btn-sm' do %>
              <%= icon 'fas', 'times', class: 'fa-fw' %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>