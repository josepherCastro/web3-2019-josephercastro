<% content_for :title do %>
  Funcionarios
<% end %>

<div class="page-header">
  <h1>Funcionarios</h1>
  <%= link_to new_funcionario_path, class: 'btn btn-primary' do %>
    <%= icon 'fas', 'plus' %>
    Novo Funcionario
  <% end %>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Matricula</th>
        <th>Nome</th>
        <th>Setor</th>
        <th>Cargo</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @funcionarios.each do |funcionario| %>
        <tr>
          <td><%= funcionario.matricula %></td>
          <td><%= funcionario.nome %></td>
          <td><%= funcionario.setor %></td>
          <td><%= funcionario.cargo %></td>
          <td>
            <%= link_to funcionario, class: 'btn btn-info btn-sm' do %>
              <%= icon 'fas', 'eye', class: 'fa-fw' %>
            <% end %>
            <%= link_to edit_funcionario_path(funcionario), class: 'btn btn-success btn-sm' do %>
              <%= icon 'fas', 'edit', class: 'fa-fw' %>
            <% end %>
            <%= link_to funcionario, method: :delete, data: { confirm: 'VocÃª tem certeza?' }, class: 'btn btn-danger btn-sm' do %>
              <%= icon 'fas', 'times', class: 'fa-fw' %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>