<% content_for :title do %>
  Detalhes de Funcionario
<% end %>

<div class="page-header">
  <h1>Detalhes de Funcionario</h1>
  <div>
    <%= link_to edit_funcionario_path(@funcionario), class: 'btn btn-success' do %>
      <%= icon 'fas', 'edit' %>
      Editar
    <% end %>
    <%= link_to funcionarios_path, class: 'btn btn-outline-secondary' do %>
      <%= icon 'fas', 'bars' %>
      Voltar
    <% end %>
  </div>
</div>

<dl class="dl-horizontal">
  <dt>Matricula:</dt>
  <dd><%= @funcionario.matricula %></dd>

  <dt>Nome:</dt>
  <dd><%= @funcionario.nome %></dd>

  <dt>Setor:</dt>
  <dd><%= @funcionario.setor %></dd>

  <dt>Cargo:</dt>
  <dd><%= @funcionario.cargo %></dd>

</dl>
