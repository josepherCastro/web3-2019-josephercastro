<% content_for :title do %>
  Privilegios
<% end %>

<div class="page-header">
  <h1>Privilegios</h1>
  <%= link_to new_privilegio_path, class: 'btn btn-primary' do %>
    <%= icon 'fas', 'plus' %>
    Novo Privilegio
  <% end %>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Tipo</th>
        <th>Descricao</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @privilegios.each do |privilegio| %>
        <tr>
          <td><%= privilegio.tipo %></td>
          <td><%= privilegio.descricao %></td>
          <td>
            <%= link_to privilegio, class: 'btn btn-info btn-sm' do %>
              <%= icon 'fas', 'eye', class: 'fa-fw' %>
            <% end %>
            <%= link_to edit_privilegio_path(privilegio), class: 'btn btn-success btn-sm' do %>
              <%= icon 'fas', 'edit', class: 'fa-fw' %>
            <% end %>
            <%= link_to privilegio, method: :delete, data: { confirm: 'VocÃª tem certeza?' }, class: 'btn btn-danger btn-sm' do %>
              <%= icon 'fas', 'times', class: 'fa-fw' %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>