<% content_for :title do %>
  Retiradas
<% end %>

<div class="page-header">
  <h1>Retiradas</h1>
  <%= link_to new_retirada_path, class: 'btn btn-primary' do %>
    <%= icon 'fas', 'plus' %>
    Novo Retirada
  <% end %>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Quantidade</th>
        <th>Material</th>
        <th>Funcionario</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @retiradas.each do |retirada| %>
        <tr>
          <td><%= retirada.quantidade %></td>
          <td><%= retirada.Material %></td>
          <td><%= retirada.Funcionario %></td>
          <td>
            <%= link_to retirada, class: 'btn btn-info btn-sm' do %>
              <%= icon 'fas', 'eye', class: 'fa-fw' %>
            <% end %>
            <%= link_to edit_retirada_path(retirada), class: 'btn btn-success btn-sm' do %>
              <%= icon 'fas', 'edit', class: 'fa-fw' %>
            <% end %>
            <%= link_to retirada, method: :delete, data: { confirm: 'VocÃª tem certeza?' }, class: 'btn btn-danger btn-sm' do %>
              <%= icon 'fas', 'times', class: 'fa-fw' %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>