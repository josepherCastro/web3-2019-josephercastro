<% content_for :title do %>
  Devolucaos
<% end %>

<div class="page-header">
  <h1>Devolucaos</h1>
  <%= link_to new_devolucao_path, class: 'btn btn-primary' do %>
    <%= icon 'fas', 'plus' %>
    Novo Devolucao
  <% end %>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Quantidade</th>
        <th>Retirada</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @devolucaos.each do |devolucao| %>
        <tr>
          <td><%= devolucao.quantidade %></td>
          <td><%= devolucao.Retirada %></td>
          <td>
            <%= link_to devolucao, class: 'btn btn-info btn-sm' do %>
              <%= icon 'fas', 'eye', class: 'fa-fw' %>
            <% end %>
            <%= link_to edit_devolucao_path(devolucao), class: 'btn btn-success btn-sm' do %>
              <%= icon 'fas', 'edit', class: 'fa-fw' %>
            <% end %>
            <%= link_to devolucao, method: :delete, data: { confirm: 'VocÃª tem certeza?' }, class: 'btn btn-danger btn-sm' do %>
              <%= icon 'fas', 'times', class: 'fa-fw' %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>