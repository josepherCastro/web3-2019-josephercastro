
<%= simple_form_for @fornecedor do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :cnpj %>
    <%= f.input :nome %>
    <%= f.input :telefone %>
    <%= f.input :endereco %>
    <%= f.input :email %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, f.object.new_record? ? 'Criar Fornecedor' : 'Atualizar Fornecedor', class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>
