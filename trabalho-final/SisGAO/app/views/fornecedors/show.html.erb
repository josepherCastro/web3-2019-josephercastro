<% content_for :title do %>
  Detalhes de Fornecedor
<% end %>

<div class="page-header">
  <h1>Detalhes de Fornecedor</h1>
  <div>
    <%= link_to edit_fornecedor_path(@fornecedor), class: 'btn btn-success' do %>
      <%= icon 'fas', 'edit' %>
      Editar
    <% end %>
    <%= link_to fornecedors_path, class: 'btn btn-outline-secondary' do %>
      <%= icon 'fas', 'bars' %>
      Voltar
    <% end %>
  </div>
</div>

<dl class="dl-horizontal">
  <dt>Cnpj:</dt>
  <dd><%= @fornecedor.cnpj %></dd>

  <dt>Nome:</dt>
  <dd><%= @fornecedor.nome %></dd>

  <dt>Telefone:</dt>
  <dd><%= @fornecedor.telefone %></dd>

  <dt>Endereco:</dt>
  <dd><%= @fornecedor.endereco %></dd>

  <dt>Email:</dt>
  <dd><%= @fornecedor.email %></dd>

</dl>
