<% content_for :title do %>
  Fornecedors
<% end %>

<div class="page-header">
  <h1>Fornecedors</h1>
  <%= link_to new_fornecedor_path, class: 'btn btn-primary' do %>
    <%= icon 'fas', 'plus' %>
    Novo Fornecedor
  <% end %>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Cnpj</th>
        <th>Nome</th>
        <th>Telefone</th>
        <th>Endereco</th>
        <th>Email</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @fornecedors.each do |fornecedor| %>
        <tr>
          <td><%= fornecedor.cnpj %></td>
          <td><%= fornecedor.nome %></td>
          <td><%= fornecedor.telefone %></td>
          <td><%= fornecedor.endereco %></td>
          <td><%= fornecedor.email %></td>
          <td>
            <%= link_to fornecedor, class: 'btn btn-info btn-sm' do %>
              <%= icon 'fas', 'eye', class: 'fa-fw' %>
            <% end %>
            <%= link_to edit_fornecedor_path(fornecedor), class: 'btn btn-success btn-sm' do %>
              <%= icon 'fas', 'edit', class: 'fa-fw' %>
            <% end %>
            <%= link_to fornecedor, method: :delete, data: { confirm: 'VocÃª tem certeza?' }, class: 'btn btn-danger btn-sm' do %>
              <%= icon 'fas', 'times', class: 'fa-fw' %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>